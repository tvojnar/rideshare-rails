<h1><%= @driver.name %>'s Details</h1>
<%# trip_list =  trips.find_all[:driver_id] %>
<section>
  <p>
    <%= link_to "Edit", edit_driver_path(@driver) %>
  </p>
  <p>
    <%= link_to "Delete", driver_path(@driver), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"} %>
  <ul>
    <li>
        Earnings: <%= @driver.total_cost %>
    </li>
    <li>
      Rating: <%= @driver.rating %>
    </li>
    <li>
    Trips:
    <%= render partial: "layouts/all_trips", locals: { model: @driver} %>
    </li>

  </ul>
