<!DOCTYPE html>
<html>
  <head>
    <title>RideshareRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>
        <%= link_to "Rideshare on Rails", root_path %>
      </h1>
      <nav>
        <ul>
          <li>
            <%= link_to "Drivers", drivers_path %>
          </li>
          <li>
            <%= link_to "Passengers", passengers_path %>
          </li>
          <li>
            <%= link_to "Add Driver", new_driver_path %>
          </li>
          <li>
            <%= link_to "Add passenger", new_passenger_path %>
          </li>
        </ul>
      </nav>
    </header>
    <div id="wrap">
    <main>
      <%= yield %>
    </main>
    </div>
    <footer>
      <p>
        &copy; 2017 Tamira and Roxanne
      </p>
    </footer>


  </body>
</html>
