<%# TODO: make every td a link to the show page for that trip! %>
<% if model.trips.count > 0 %>
  <table>
    <thead>
    <tr>
      <th>
        Trip ID
      </th>
      <th>
        Date
      </th>
      <th>
        Passenger ID
      </th>
      <th>
        Driver ID
      </th>
      <th>
        Cost
      </th>
      <th>
        Rating
      </th>
    </tr>
    </thead>
    <tbody>
    <% model.trips.each do |trip| %>
    <tr>
      <td>
        <%= link_to trip.id, trip_path(trip)%>
      </td>
      <td>
        <%= trip.date %>
      </td>
      <td>
        <%= trip.passenger_id %>
      </td>
      <td>
        <%= trip.driver_id %>
      </td>
      <td>
        <%# TODO: move this logic somewhere else? %>
        $<%= (trip.cost.to_f/100).round(2) %>
      </td>
      <td>
        <%= trip.rating %>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <% else %>
    <p class="no-trips">
      <%= model.name %> has no trips
    </p>
  <% end %>
