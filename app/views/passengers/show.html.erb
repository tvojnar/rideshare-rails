
<h1><%= @passenger.name %></h1>
<p>
  <%= link_to "Passengers trips index page", passenger_trips_path(@passenger.id) %>

</p>
<p>
  <%= link_to "Add a trip for ", new_passenger_trip_path(@passenger) %>
</p>
<p>
  Phone number: <%= @passenger.phone_number %>
</p>
<p>
  Total spent on rides: <%= @passenger.total_cost %>
</p>
<p>
  <%= link_to "Edit", edit_passenger_path(@passenger) %>
</p>
<p>
  <%= link_to "Delete", passenger_path(@passenger), method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"} %>

<%= render partial: "layouts/all_trips", locals: { model: @passenger} %>

